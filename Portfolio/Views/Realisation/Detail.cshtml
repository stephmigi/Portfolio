@{
    ViewBag.Title = "RealisationDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model ObjectModel.Realisation
<h2>@Model.Name</h2>

<div class ="competence-description">@Model.Description</div>

<div class="competence-detail">
    <span class ="associated">Les compétences que j'ai pu mettre en pratique lors de ce projet :</span>
        
        <ul>
        @foreach (var comp in Model.GetCompetencesByType(ObjectModel.CompetenceType.TechnicalProject))
        { 
            
                <li>@Html.ActionLink(comp.Name, "Detail", "Competence", new { id = comp.Id }, null)</li>
            
        }
</ul>
    <ul>
        @foreach (var comp in Model.GetCompetencesByType(ObjectModel.CompetenceType.HumanProject))
        { 
            
                <li>@Html.ActionLink(comp.Name, "Detail", "Competence", new { id = comp.Id }, null)</li>
            
        }
        </ul>
</div>


