@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using ObjectModel.Helpers
@using ObjectModel.Realisations
@model Portfolio.ViewModels.Realisations.ListViewModel

<h2>Mes réalisations</h2>

@foreach (RealisationType realisationType in Enum.GetValues(typeof(RealisationType)))
{
    <h3>@EnumHelpers.GetResourceText(realisationType)</h3>
    foreach (var real in Model.Realisations.Where(p => p.Type == realisationType))
    {
        <div class="realisation-summary">
            <img src="~/Content/img/logos/@real.ImageName" />
            <div>
                <span class="realisationName">@real.Name</span> @real.ShortDescription
                @Html.ActionLink(ObjectModel.Helpers.ResourceHelpers.GetString("General", "SEE_MORE"), "Detail", new { id = real.Id })
            </div>
        </div>
    }
}

