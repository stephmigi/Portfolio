<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Mon portfolio</title>
    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/portfolio.css" rel="stylesheet">
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class ="navbar-header">
                <button type ="button" class ="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class ="sr-only">Toggle Navigation</span>
                    <span class ="icon-bar"></span>
                    <span class ="icon-bar"></span>
                    <span class ="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Portfolio</a>
            </div>
            <div class ="navbar-collapse collapse">
                <ul class ="nav navbar-nav">
                    <li class ="active">@Html.ActionLink("Accueil", "Index", "Home")</li>
                    <li>@Html.ActionLink("Compétences", "Index", "Competence")</li>
                    <li>@Html.ActionLink("Réalisations", "Index", "Realisation")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class ="content">
        @RenderBody()
    </div>

    <nav class="navbar navbar-default navbar-fixed-bottom" role="navigation">
        <div class="container">
            Copyright Stéphane Miginiac - 2014
            <div class="image-bar">
                <a href="@Url.Action("ChangeLanguage", "Home", new { id = "fr-FR" })"><img src="~/Content/img/flags/france.png" /></a>
                <a href="@Url.Action("ChangeLanguage", "Home", new { id = "en-GB" })"><img src="~/Content/img/flags/english.png" /></a>
            </div>
        </div>
    </nav>
</body>
</html>
